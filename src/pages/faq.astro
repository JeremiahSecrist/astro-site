---
import Default from "../layouts/Default.astro";
---

<Default>
  <section>
    <div class="bg-background-900 py-6 sm:py-8 lg:py-12">
      <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
        <!-- FAQ Header -->
        <div class="mb-10 md:mb-16">
          <h2
            class="mb-4 text-center text-2xl font-bold text-white md:mb-6 lg:text-3xl"
          >
            Frequently asked questions
          </h2>
        </div>
        <!-- End FAQ Header -->
        <div class="mx-auto flex max-w-screen-md flex-col border-t">
          <!-- FAQ Item -->
          <details class="border-b">
            <summary
              class="faq-question flex items-center justify-between bg-background-700 px-4 py-4 text-primary-300"
            >
              <span class="font-semibold">How does the product work?</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="bg-background-800 p-4 text-white">
              This is a section of some simple filler text, also known as
              placeholder text. It shares some characteristics of a real written
              text but is random or otherwise generated. It may be used to
              display a sample of fonts or generate text for testing.
            </p>
          </details>
          <!-- End FAQ Item -->
