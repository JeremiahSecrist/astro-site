---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Sizzle from "../../components/Sizzle.astro";
import Specials from "../../components/Specials.astro";
import HoursCommon from "../../components/HoursCommon.astro";
import Newletter from "../../components/Newletter.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { wpquery } from "../../data/wordpress";
import BlogCard from "../../components/BlogCard.astro";
import Default from "../../layouts/Default.astro";
const data = await wpquery({
  query: `
    query LoadAllPosts {
      posts {
        nodes {
          featuredImage {
            node {
              altText
              mediaItemUrl
              srcSet
              sizes
            }
          }
          date
          slug
          title
          content(format: RENDERED)
          author {
            node {
              name
            }
          }
        }
      }
    }
`,
});
---

<Default>
  <ol class="pl-auto mx-auto my-4 max-w-screen-md items-center space-y-2">
    <BlogCard />
    <BlogCard />
  </ol>
</Default>
