---
let {
  addressUrl = "images/maps.png",
  daysClosed = "Saturday and Sunday",
  daysOpen = "Monday ~ Friday",
  hoursOpen = "10:30am-11pm",
  address = " 14286 Beach Blvd, Jacksonville, FL 32250",
} = Astro.props;
---

<div class="bg-background-900 p-6">
  <div
    class="mx-auto grid max-w-screen-2xl grid-cols-1 gap-2 p-4 text-4xl leading-loose text-white shadow-xl sm:grid-cols-2"
  >
    <div class="tall">
      <h1
        class="rounded bg-secondary-500 px-4 py-2 text-2xl font-semibold text-white shadow-md"
      >
        Hours
      </h1>
      <div class="grid h-3/4 grid-cols-2 gap-2 py-2">
        <div class="">
          <div
            class="flex flex-row rounded-l bg-emerald-600 p-1 py-1 pl-6 text-base"
          >
            <svg class="inline-block size-6 translate-y-1 pr-1">
              <use href="#icon-open"></use>
            </svg>
            <span class="text-2xl">Open</span>
          </div>
          <div
            class="prose mt-1 h-44 bg-background-700 p-1 pl-4 text-xl text-white *:block"
          >
            <span>{daysOpen}</span>
            <span>{hoursOpen}</span>
          </div>
        </div>
        <div>
          <div
            class="flex flex-row rounded-r bg-red-600 p-1 py-1 pl-6 text-base"
          >
            <svg class="inline-block size-6 translate-y-1 pr-1">
              <use href="#icon-close"></use>
            </svg>
            <span class="text-2xl">Closed</span>
          </div>
          <div
            class="prose mt-1 h-44 bg-background-700 p-1 pl-4 text-xl text-white *:block"
          >
            <span> {daysClosed} </span>
            <span class="text-sm italic"
              >We observe federal and Jewish Holidays</span
            >
          </div>
        </div>
      </div>
    </div>
    <div class="relative">
      <h1
        class="mb-2 rounded bg-secondary-500 px-4 py-2 text-2xl font-semibold text-white shadow-md"
      >
        Location
      </h1>
      <div class="relative overflow-hidden rounded">
        <img
          class="aspect-square h-56 w-full rounded object-cover [filter:grayscale(100%);] md:aspect-video"
          src={addressUrl}
        />
        <div
          class="absolute inset-x-0 bottom-0 z-20 flex h-20 items-center rounded-t-xl bg-black/50 p-4 text-start text-xl capitalize leading-normal text-primary-400"
        >
          <a
            class="italic hover:underline"
            href="https://maps.app.goo.gl/YJEGXDkyZ6nWLqva8"
            target="_blank"
            aria-label={"address:" + address}
          >
            {address}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
