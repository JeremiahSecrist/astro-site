  </section>
  <style>
    details {
      position: relative;
      overflow: hidden;
    }

    summary {
      list-style: none;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
    }

    details[open] summary svg {
      transform: rotate(180deg);
    }

    details summary svg {
      transition: transform 0.3s ease;
    }

    details p {
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transition:
        max-height 0.3s ease,
        opacity 0.3s ease;
    }

    details[open] p {
      max-height: 200px; /* Adjust according to the content size */
      opacity: 1;
    }
  </style>
